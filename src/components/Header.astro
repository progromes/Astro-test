---
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";

const { pages } = Astro.props;
---

<header class="p-4 w-full fixed top-0 left-0 z-10 bg-primary">
  <div class="container mx-auto xl:flex justify-between items-center gap-5">
    <Astronav>
      <div class="flex items-center justify-between gap-5 flex-wrap">
        <div class="flex items-center gap-5">
          <MenuIcon class="w-7 h-7 xl:hidden" />
          <a class="kqwSc29T" href="/">
            <img
              src="/logo-header.png"
              alt="image"
              width={224}
              height={108}
              class="h-[108px] xl:w-full"
            />
          </a>
        </div>
        <div class="flex item s-center gap-3 w-full sm:w-auto xl:hidden">
          <span
            class="kqwSc29T py-4 px-6 font-medium uppercase bg-[#CCFF66] rounded-[50px] text-[#000] transition hover:bg-[#A14BF7] hover:text-[#FFF] cursor-pointer"
            >Вход</span
          >
          <span
            class="kqwSc29T py-4 px-8 font-medium bg-[#A14BF7] uppercase rounded-[50px] transition hover:bg-[#511F83] cursor-pointer"
            >Регистрация</span
          >
        </div>
      </div>
      <MenuItems class="hidden xl:flex py-5">
        <ul
          class="flex flex-col xl:flex-row gap-4 xl:flex xl:space-x-5 xl:space-y-0 xl:pt-0 text-xl"
        >
          {
            pages.map((page) => (
              <li class="hover:text-red font-medium transition-colors">
                <a href={`/${page.slug}`}>{page.data.title}</a>
              </li>
            ))
          }
          <li class="hover:text-red font-medium transition-colors">
            <a href="/posts/">Posts</a>
          </li>
        </ul>
      </MenuItems>
    </Astronav>
    <div class="items-center gap-5 hidden xl:flex">
      <span
        class="kqwSc29T py-4 px-6 font-medium bg-[#CCFF66] uppercase rounded-[50px] transition hover:bg-[#A14BF7] hover:text-[#FFF] cursor-pointer"
        >Вход</span
      >
      <span
        class="kqwSc29T py-4 px-8 font-medium bg-[#A14BF7] text-[#fff] uppercase rounded-[50px] transition hover:bg-[#511F83] cursor-pointer"
        >Регистрация</span
      >
    </div>
  </div>
</header>
